<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Botão de voltar no topo -->
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_azul"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="0dp"/>

        <!-- Escudo e nome do time -->
        <ImageView
            android:id="@+id/imgTeamCrest"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/txtTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Time"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/cor_primaria"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- CardView/Box de informações do clube -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="14dp"
            android:layout_marginBottom="18dp"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/txtTeamDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fundação: -\nEstádio: -\nCidade: -\nSite: -"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Título do elenco -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elenco"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/cor_primaria"
            android:layout_marginBottom="8dp"/>

        <!-- Lista do elenco agrupado por posição -->
        <LinearLayout
            android:id="@+id/layoutSquad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>
</ScrollView>

